<?xml version="1.0"?>
<spark:PanelScreen xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:spark="feathers.spark.*" xmlns:data="feathers.data.*"
                   title="Grouped List">

  <spark:customHeader>
    <spark:Header>
      <spark:leftContent>
        <spark:Button label="Back" style="{feathers.controls.Button.ALTERNATE_STYLE_NAME_BACK_BUTTON}" click="cancel()"/>
      </spark:leftContent>
      <spark:rightContent>
        <spark:Button label="Settings" click="showNextScreen(SHOW_SETTINGS)"/>
      </spark:rightContent>
    </spark:Header>
  </spark:customHeader>

  <!-- TODO: BUG in using height="100%", top=0 and bottom=0 works fine, needs to investigate-->

  <spark:GroupedList width="100%" height="100%"
                     isSelectable="true" hasElasticEdges="true" clipContent="false" autoHideBackground="true"
                     labelField="text">

    <data:HierarchicalCollection>
       <fx:Array>
         <fx:Object header="A" children='{[
                              { text: "Aardvark" },
                              { text: "Alligator" },
                              { text: "Alpaca" },
                              { text: "Anteater" }
                              ]}'/>
         <fx:Object header="B" children='{[
                               { text: "Baboon" },
                               { text: "Bear" },
                               { text: "Beaver" }
                               ]}'/>
         <fx:Object header="C" children='{[
                               { text: "Canary" },
						       { text: "Cat" }
                               ]}'/>
       </fx:Array>
    </data:HierarchicalCollection>
  </spark:GroupedList>

  <fx:Script>
    <![CDATA[
    import feathers.controls.Button;

    public static const SHOW_SETTINGS:String = "showSettings";

    ]]>
  </fx:Script>
</spark:PanelScreen>
