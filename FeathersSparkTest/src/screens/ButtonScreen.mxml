<?xml version="1.0"?>
<spark:PanelScreen xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:spark="feathers.spark.*"
                   title="Button">

    <spark:customHeader>
        <spark:Header>
            <spark:leftContent>
                <spark:Button label="Back" style="{feathers.controls.Button.ALTERNATE_STYLE_NAME_BACK_BUTTON}" click="close()"/>
            </spark:leftContent>
            <spark:rightContent>
                <spark:Button label="Quiet Button" style="{feathers.controls.Button.ALTERNATE_STYLE_NAME_QUIET_BUTTON}"/>
            </spark:rightContent>
        </spark:Header>
    </spark:customHeader>

    <spark:VGroup top="0" left="0" right="0" bottom="0" horizontalAlign="center" paddingTop="20" gap="10">
        <spark:Button id="btn" label="Normal Button"/>
        <spark:Button label="Disabled Button" enabled="false"/>
        <spark:ToggleButton label="Toggle Button" selected="true"/>
        <spark:Button label="Call to Action Button" style="{feathers.controls.Button.ALTERNATE_STYLE_NAME_CALL_TO_ACTION_BUTTON}"/>
        <spark:Button label="Danger Button" style="{feathers.controls.Button.ALTERNATE_STYLE_NAME_DANGER_BUTTON}"/>
        <spark:Button label="Back Button" style="{feathers.controls.Button.ALTERNATE_STYLE_NAME_BACK_BUTTON}"/>
        <spark:Button label="Forward Button" style="{feathers.controls.Button.ALTERNATE_STYLE_NAME_FORWARD_BUTTON}"/>
    </spark:VGroup>

    <fx:Script>
        <![CDATA[
        import feathers.controls.Button;
        ]]>
    </fx:Script>
</spark:PanelScreen>
